<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MerchCount2.MainMenu"
             xmlns:local="clr-namespace:MerchCount2"
             Title="MainMenu">
    <FlexLayout Direction="Column">

        <!-- Header -->
        <Label Text="HEADER"
               x:Name="TopContent"
               FontSize="18"
               BackgroundColor="#FFC0CB"
               HorizontalTextAlignment="Center" />

        <!-- Body -->
        
        <FlexLayout FlexLayout.Grow="1">

            <FlexLayout FlexLayout.Grow="1" 
                        x:Name="BodyContent" 
                        Wrap="Wrap"
                        AlignContent="Start"
                        BackgroundColor="#FFC0CB"
                        AlignItems="Start">
                <local:GroupButton></local:GroupButton>
            </FlexLayout>
            <!-- Navigation items-->
            <BoxView FlexLayout.Basis="50"
                    FlexLayout.Order="-1"
                    Color="#FFC0CB" />

            <!-- Aside items -->
            <BoxView FlexLayout.Basis="50"
                    Color="#FFC0CB" />

        </FlexLayout>

        <!-- Footer -->
        <Label Text="FOOTER"
               FontSize="18"
               BackgroundColor="#FFC0CB"
               HorizontalTextAlignment="Center" />
    </FlexLayout>
</ContentPage>